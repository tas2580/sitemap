{
	"name": "tas2580/sitemap",
	"type": "phpbb-extension",
	"description": "Creates an XML sitemap for the forum. You can access the sitemap on {MY_BOARD_URL}/sitemap.xml or {MY_BOARD_URL}/app.php/sitemap.xml.",
	"homepage": "https://tas2580.net/downloads/phpbb-sitemap/",
	"version": "0.1.4",
	"keywords": ["phpbb", "extension", "seo", "sitemap"],
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "tas2580",
			"email": "mail@tas2580.net",
			"homepage": "https://tas2580.net",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=5.3.3",
		"composer/installers": "~1.0"
	},
	"require-dev": {
		"phpbb/epv": "dev-master"
	},
	"extra": {
		"display-name": "XML Sitemap",
		"soft-require": {
			"phpbb/phpbb": ">=3.1.4-RC1,<3.3.0@dev"
		},
		"version-check": {
			"host": "phpbb-versionscheck.cf",
			"directory": "/tas2580/sitemap/master",
			"filename": "version-check.json"
		}
	}
}
